<% include ../partials/header %>
<div class="container">
    <div class="row">  <!--This and the other div's in this block will help us resize the input blocks and make them better looking-->
        <h2 style="text-align: center;">Add New Comment to <%=valueInNewCommentsTemplate.name %></h2>
        <div style="width: 30%; margin: 25px auto;">
            <!--Need the ID of the campground-->
            <!--It should send a POST to campgrounds/:id/comments-->
            <!--The GET URL will be campgrounds/:id/comments/new-->
            <form action="/campgrounds/<%= valueInNewCommentsTemplate._id %>/comments" method="POST">
                <!--For spacing between each input and the button, put them each inside a form-group-->
                <div class="form-group">
                    <!--Bundling comment and author into one variable - VERSION 4-->
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <!--btn-block makes the button the same size as the other inputs-->
                    <!--if you use btn-default instead of button primary, the button will appear as gray-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>  <!--So it stays inside the 30% margin div -->
        </div>
         
    </div>

</div>

<% include ../partials/footer %>
