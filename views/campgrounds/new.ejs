<% include ../partials/header %>
<div class="container">
    <div class="row">  <!--This and the other div's in this block will help us resize the input blocks and make them better looking-->
        <h2 style="text-align: center;">Create a New campground</h2>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <!--For spacing between each input and the button, put them each inside a form-group-->
                <div class="form-group">
                    <input class="form-control" type="text" name="campName" placeholder="name">
                </div>
                <!--type=number so users can only input number in this field, but we will store this number as string in the database model-->
                <div class="form-group">
                    <input class="form-control" type="number" name="campPrice" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campImage" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campDescription" placeholder="description">
                </div>
                <div class="form-group">
                    <!--btn-block makes the button the same size as the other inputs-->
                    <!--if you use btn-default instead of button primary, the button will appear as gray-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>  <!--So it stays inside the 30% margin div -->
        </div>
         
    </div>

</div>

<% include ../partials/footer %>
