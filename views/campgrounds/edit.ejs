<!--Exacct same form as new.ejs, the only difference is where the form POSTS, and the type of request that we're making-->
<% include ../partials/header %>
<div class="container">
    <div class="row">  <!--This and the other div's in this block will help us resize the input blocks and make them better looking-->
        <h2 style="text-align: center;">Edit <%= valueInEditTemplate.name %></h2>
        <div style="width: 30%; margin: 25px auto;">
            <!--This is the way you specify a PUT route-->
            <form action="/campgrounds/<%= valueInEditTemplate._id %>?_method=PUT" method="POST"> <!--need an ID to go here, also PUT method -->
                <!--For spacing between each input and the button, put them each inside a form-group-->
                <div class="form-group">
                    <input class="form-control" type="text" name="valueInEditTemplate[campName]" placeholder="name" value="<% valueInEditTemplate.name %>"> <!--add value -->
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="valueInEditTemplate[campPrice]" value="<% valueInEditTemplate.price %>" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="valueInEditTemplate[campImage]" placeholder="image link" value="<% valueInEditTemplate.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="valueInEditTemplate[campDescription]" placeholder="description" value="<% valueInEditTemplate.description %>">
                </div>
                <div class="form-group">
                    <!--btn-block makes the button the same size as the other inputs-->
                    <!--if you use btn-default instead of button primary, the button will appear as gray-->
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>  <!--So it stays inside the 30% margin div -->
        </div>
         
    </div>

</div>

<% include ../partials/footer %>
